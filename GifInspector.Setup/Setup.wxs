<?xml version="1.0"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
	<Product Id="*"
		Name="GIF Inspector"
		Language="1033"
		Version="0.1.0.0"
		UpgradeCode="6EB7F952-1A02-4C60-8214-2537A4C8EB42"
		Manufacturer="Simon Bridewell">
		<Package Description="Application for analysing GIF files"
			InstallerVersion="200"
			Compressed="yes"/>
		<!--
			Source media for the installation. 
 			Specifies a single cab file to be embedded in the installer's .msi. 
		-->
		<Media Id="1" Cabinet="contents.cab" EmbedCab="yes" CompressionLevel="high"/>
		
		<!-- Installation directory and files are defined in Files.wxs -->
		<Directory Id="TARGETDIR" Name="SourceDir"/>
		
		<Feature Id="Complete"
		         Title="GIF Inspector"
		         Description="Application for analysing GIF files"
		         Level="1">
			<ComponentRef Id="LicenseRtf"/>
			<ComponentRef Id="LicenseTxt"/>
			<ComponentRef Id="GifInspector"/>
			<ComponentRef Id="GifComponents"/>
			<ComponentRef Id="AboutFormParameters"/>
		</Feature>
		
		<!-- 
			Using the Wix UI library
 
			WixUI_InstallDir does not allow the user to choose 
			features but adds a dialog to let the user choose a 
			directory where the product will be installed
		-->
		<Property Id="WIXUI_INSTALLDIR">INSTALLDIR</Property>
		<UIRef Id="WixUI_InstallDir"/>
	</Product>
</Wix>
